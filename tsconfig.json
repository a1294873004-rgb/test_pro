{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "esnext", // 编译目标 JavaScript 版本
    "module": "esnext", // 模块化方案
    "jsx": "preserve", // 支持 JSX 语法
    "lib": ["dom", "dom.iterable", "esnext"], // 包含的库文件
    "allowJs": true, // 允许引入 JavaScript 文件
    "skipLibCheck": true, // 跳过对声明文件的类型检查
    "esModuleInterop": true, // 允许使用 ES 模块语法导入 CommonJS 模块
    "allowSyntheticDefaultImports": true, // 允许从没有默认导出的模块中默认导入
    "strict": true, // 启用所有严格类型检查选项
    "forceConsistentCasingInFileNames": true, // 强制文件名大小写一致
    "moduleResolution": "node", // 模块解析策略
    "resolveJsonModule": true, // 允许导入 JSON 模块
    "noEmit": true, // 不输出编译后的文件（由 Babel 处理）
    "baseUrl": ".", // 设置 baseUrl
    "incremental": true, // 启用增量编译
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "noImplicitOverride": true,
    "paths": {
      "src/*": ["./src/*"],
      "@styles/*": ["src/styles/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*", "index.tsx", "typings.d.ts"],
  "exclude": ["node_modules"]
}
